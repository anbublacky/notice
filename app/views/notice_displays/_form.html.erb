    </select>
  </div>
  <div class="field">
    <%= f.label "செய்தி" %><br />
    <%= f.cktext_area :message, :ckeditor => {:language => "en", :toolbar => "mini"} %>
  </div>
  <div class="field">
    <%= f.label :posted_by %><br />
    <%= f.text_field :posted_by %>
  </div>
  <div class="field">
    <% f.label :orbituarysite_id %><br />
    <%= f.hidden_field :orbituarysite_id %>
  </div>
  
