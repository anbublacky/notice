                  <p><%= link_to raw("<i class=\"icon-google-plus\"> | Sign in with Google</i>"), user_omniauth_authorize_path(:google_oauth2),:class => "btn btn-google-plus" %></p>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->


        <%= menu_group :pull => :right do %>
        <% if user_signed_in? %>
        <%= link_to 'Account', home_account_path, :class => "btn btn-default color_black" %>
        <%= link_to 'Logout', destroy_user_session_path, :class => "btn btn-default color_black" %>        
        <% end %>
