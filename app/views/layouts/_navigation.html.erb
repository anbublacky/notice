<div class="navbar navbar-fluid-top">
  <div class="navbar-inner">
    <div class="container-fluid container">
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="http://ninaivu.7zero.com:3000"><%= image_tag('ninaivu_logo.png') %></a>
      <div class="container-fluid nav-collapse">
        <ul class="nav">
          <li class="navbar-text"><%# link_to "Create Orbituary site", new_orbituarysite_path :data-toggle => "modal" href="#myModal2"  %>
            <% if user_signed_in? %>                
            <%= link_to "Create Orbituary Site", '/orbituarysites/new', :class => "btn btn-default" %>
            <% else %>
            <a data-toggle="modal" href="#myModal6" href="/condolences/new"><button class="btn btn-default">Create Orbituary site</button></a>
            <% end %>
          </li>
        </ul>
