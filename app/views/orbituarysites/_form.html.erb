<%= form_for(@orbituarysite) do |f| %>
  <% if @orbituarysite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@orbituarysite.errors.count, "error") %> prohibited this orbituarysite from being saved:</h2>

      <ul>
      <% @orbituarysite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :salutation %><br />
<select id="salutation" name="salutation">
  <option value="திரு.">திரு.</option>
  <option value="திருமதி">திருமதி</option>
  <option value="செல்வி">செல்வி</option>
  <option value="செல்வன">செல்வன்</option>
  <option value="வீர வேங்கை">வீர வேங்கை</option>  
</select>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <% f.label :orbiturerimage %><br />
    <% f.text_field :orbiturerimage %>
  </div>
  <h3>படம்</h3>
  <hr>
    <%= image_tag(@orbituarysite.orbiturerimage_url()) if @orbituarysite.orbiturerimage? %>
    <%= f.file_field :orbiturerimage %>
  <div class="field">
    <%= f.label "Please select" %>
    <%= f.select :slogan, options_for_select(['மண்ணில் - விண்ணில் ','அன்னை மடியில் - ஆண்டவன் அடியில்','வீரப்பிறப்பு - வீரச்சாவு']) %>
  </div>
  <div class="field">
    <%= f.label :frame %>
    <%= f.radio_button :frame, '1', checked: true%><%= image_tag('flower_frames_1.png', size: "50x50")%>
    <%= f.radio_button :frame, '2'%><%= image_tag('flower_frames_5.png', size: "50x50")%>
    <%= f.radio_button :frame, '3'%><%= image_tag('flower_frames_6.png', size: "50x50")%>
  </div>
  <div class="field">
    <h3>"பிறந்த திகதி"</h3><hr><br />
    <%# f.datetime_field :dob %>
    <%= f.text_field :dob, :id => "dob" %>
  </div>
  <div class="field">
    <h3>"இறந்த திகதி"</h3><hr><br />
    <%# f.datetime_field :dod %>
    <%= f.text_field :dod, :id => "dod" %>
  </div>
  <div class="field">
    பிறந்த இடம்:
<br />
    <%= f.text_field :birth_place %>
  </div>
  <div class="field">
    வாழ்ந்த இடம்<br />
    <%= f.text_field :living_place %>
  </div>
    <div class="field">
    இறைவனடி சேர்ந்த இடம்<br />
    <%= f.text_field :death_place %>
  </div>

  <div class="field">
    <% f.label :user_id %><br />
    <%= f.hidden_field :user_id %>
  </div>
  
  <div class="actions">
    <%= f.submit "Create orbituary", :class => "btn btn-primary" %>
  </div>
<% end %>
