    <%# f.radio_button :flower, "4" %>
  </div>
  <div class="field">
    <%= f.label :share_content %><br />
    <%= f.cktext_area :share_content, :ckeditor => {:language => "en", :toolbar => "mini" } %>
  </div>
  <div class="field">
    <% f.label :orbituarysite_id %><br />
    <%= f.hidden_field :orbituarysite_id %>
  </div>
  <div class="actions">
    <%= f.submit "Condolences", :class => "btn btn-primary" %>
  </div>
